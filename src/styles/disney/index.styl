.el-date-editor .el-range-separator {
  padding: 0px !important;
}

html {
  box-sizing: border-box;
}

*, :after, :before {
  box-sizing: border-box;
}

// *, *:before, *:after {
// margin: 0px;
// box-sizing: inherit;
// }
div:focus {
  outline: none;
}

a:focus, a:active {
  outline: none;
}

a, a:focus, a:hover {
  cursor: pointer;
  color: inherit;
  text-decoration: none;
}

.clearfix {
  &:after {
    visibility: hidden;
    display: block;
    font-size: 0;
    content: ' ';
    clear: both;
    height: 0;
  }
}

.color-green {
  color: $color-green;
}

.color-red {
  color: $color-red;
}

.bg-primary {
  background-color: $color-primary !important;
}

.bg-green {
  background-color: $color-green !important;
}

.bg-red {
  background-color: $color-red !important;
}
