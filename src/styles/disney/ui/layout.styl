.app-wrapper {
  clearfix();
  position: relative;
  height: 100%;
  width: 100%;
}

.app-main {
  min-height: 100%;
}

.layout {
  min-height: 100%;
  transition: margin-left 0.28s;
  padding-left: 256px;
  padding-top: 64px;

  * {
    box-sizing: border-box;
  }
}

.layout-content {
  flex: auto;
  height: 100%;
}

.layout-footer {
}

.page {
  overflow: hidden;
}

.bg--gray {
  background: $color-light-grey-sss;
}

.page-header {
  border-bottom: 1px solid #e8e8e8;
  margin-bottom: 15px;
  padding: 20px;
  background: #FFF;
}

.page-content {
  margin: 24px 24px 0;
  padding-bottom: 24px;
}

.el-radio-group {
  vertical-align: top;
}
